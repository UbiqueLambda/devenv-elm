{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node20/tsconfig.json",
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "allowJs": false,
    "noUncheckedIndexedAccess": true,
    "outDir": "bin",
    "strictNullChecks": true,
    "target": "es2022" // should also be changed in eslintconfig.json
  },
  "include": ["src"]
}
